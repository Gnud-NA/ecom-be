{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom", "dom.iterable"],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "types": ["node", "express", "multer"]
    }
}
